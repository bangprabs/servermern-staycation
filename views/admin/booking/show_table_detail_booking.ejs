<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="https://adminserver-bwamern/<%= booking.payments.proofPayment %>" alt="images" srcset=""
                    style="width: 100%; display: block;">
                
                <% if(booking.payments.proofPayment == 'Proses') { %>
                    <div class="row">
                        <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="post">
                            <button type="submit" class=" ml-3 mt-3 align-center btn btn-primary btn-sm"><i
                                    class="fas fa-check"></i> Confirmation</button>
                        </form>
                        <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="post">
                            <button type="submit" class="mt-3 ml-3 btn btn-danger btn-sm"><i class="fas fa-times"></i>
                                Reject</button>
                        </form>
                    </div>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableDetailBooking" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name Member</th>
                                <th>Total</th>
                                <th>Bank Name</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name Member</th>
                                <th>Total</th>
                                <th>Bank Name</th>
                                <th>Title</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                <td>Rp. <%= booking.total %></td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>