<div class="tab-pane fade show" id="showActivity" role="tabpanel" aria-labelledby="showActivity-tab">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/activity" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="nameBank" name="name" required
                                    placeholder="Input Name">
                            </div>
                            <div class="form-group">
                                <label for="name">Type</label>
                                <input type="text" class="form-control" id="type" name="type" required
                                    placeholder="Input Type">
                            </div>
                            <div class="form-group">
                                <label for="name">Image</label>
                                <input type="file" class="form-control" id="image" name="image" required>
                            </div>
                            <input type="hidden" value="<%= itemId %>" name="itemId">
                            <button type="submit" class="float-left btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% for(let i = 0; i < activity.length; i++){ %>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= activity[i].name %></td>
                                        <td><%= activity[i].type %></td>
                                        <td class="text-center">
                                            <img src="https://adminserver-bwamern.herokuapp.com//<%= activity[i].imageUrl %>" alt="imageUrl" width="100px">
                                        </td>
                                        <td>
                                            <form action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE" method="post">
                                                <a href="javascript:void()" type="button"
                                                    class="btn btn-warning btn-circle btn-sm button-update"
                                                    data-id="<%= activity[i].id %>" 
                                                    data-name="<%= activity[i].name %>" 
                                                    data-type="<%= activity[i].type %>"><i
                                                        class="fas fa-edit"></i></a>
                                                <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                                        class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>